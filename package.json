{
  "name": "tgenz1213-portfolio",
  "version": "0.1.4",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "exports": {
    "./tsconfig": "./tsconfig.base.json"
  },
  "scripts": {
    "dev": "yarn workspace client dev",
    "build": "yarn workspaces foreach -Apt run build",
    "lint": "yarn workspaces foreach -Apt run lint",
    "test": "yarn workspaces foreach -Apt run test",
    "test:unit": "yarn workspaces foreach -Apt run test",
    "format": "yarn prettier --write .",
    "format:check": "yarn prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,vue,ts,json,md}": "yarn prettier --write",
    "apps/client/**/*.{js,vue,ts}": "yarn workspace client eslint --fix",
    "apps/client/**/*.{spec,test}.{js,ts}": "yarn workspace client vitest related --run"
  },
  "packageManager": "yarn@4.10.3"
}
